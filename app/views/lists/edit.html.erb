

<h1>編集画面</h1>

<%= form_with model: @list do |f| %>
  <label for="inputTitle">Title</label>
  <%= f.text_field :title, autofocus: true, id:"inputTitle", placeholder:"タイトル" %>
  <label for="inputImage">Image</label>
  <%= f.file_field :image, placeholder: "イラスト", accept: "image/*" %>
  <label for="inputCaption">Caption</label>
  <%= f.text_area :caption, id:"inputCaption" %>
  
  <%= f.submit "変更を保存" %>
<% end %>

