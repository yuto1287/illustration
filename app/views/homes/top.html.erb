<h1>Homes#top</h1>
<p>Find me in app/views/homes/top.html.erb</p>

<%= t("activerecord.attributes.user.name") %>
<%= l(Time.current) %>

<% @lists = List.all.order(created_at: :desc) %>

<div class="row">
  <% @lists.each do |list| %>
    <div class="col-sm-6 col-md-4 col-lg-3">
      <div class="card my-3">
        <div class="card-body">
          <%= image_tag list.image, class: "img-fluid" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
