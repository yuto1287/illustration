<h2>プロフィール編集</h2>
<%= form_with model: @user do |f| %>
  <%= render 'layouts/error_messages', resource: @user %>
  <div class="form-group">
    <label for="inputName">Name</label><br>
    <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前" %>
  </div>
  <div class"form-group">
    <label for="inputImage">ProfileImage</label><br>
    <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
  </div>
  <div class="form-group mt-3">
    <%= f.submit "変更を保存", class: "btn btn-sm btn-success" %>
    <%= link_to "退会する", user_path, method: :delete, :class => "btn btn-danger ms-3", data: { confirm: "本当に退会しますか？" }  %>
  </div>
<% end %>