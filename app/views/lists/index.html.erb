<div class="card-list-container py-5">
  <% @lists.each do |list| %>
    <div class="card w-50 mx-auto mt-4 shadow-lg">
      <%= link_to list_path(list.id) do %>
        <%= image_tag list.get_image, class: "card-img-top"; %>
      <% end %>
      <div class="card-body">
        <div class="row">
          <div class="col-2">
            <%#= image_tag list.user.get_profile_image(100,100), class: "mt-3 rounded-circle"; %>
          </div>
          <div class="col-10">
            <p class="card-title">
              <%= link_to(list_path(list.id)) do %>
                <strong><i class="far fa-flag"></i><span><%= list.title %></span></strong>
              <% end %>
            </p>
            <span><i class="fas fa-user"></i> By <%= list.user.name %></span>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
