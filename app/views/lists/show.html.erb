<div class="card w-50 mx-auto mt-4 shadow-lg">
  <%= image_tag @list.get_image, class: "card-img-top"; %>
  <div class="card-body">
    <div class="row">
      <div class="col-2">
        <%#= image_tag list.user.get_profile_image(100,100), class: "mt-3 rounded-circle"; %>
      </div>
      <div class="col-10">
        <p class="card-title">
          タイトル: <%= @list.title %>
        </p>
        <p class="card-caption">
          説明: <%= @list.caption %>
        </p>
        <span><i class="fas fa-user"></i> <%= @list.user.name %></span>
        <%= @list.created_at.strftime('%Y/%m/%d') %>
        <% if @list.user == current_user %>
          <%= link_to "削除", list_path(@list.id), method: :delete %>
        <% end %>
      </div>
    </div>
  </div>
</div>
